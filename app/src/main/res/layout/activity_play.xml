<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="4"
    android:columnCount="9"
    android:background="@drawable/levelx7background"
    android:layout_gravity="center"

    >


    <Button
        android:id="@+id/btnlevel1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="0"
        android:layout_column="0"
        android:onClick="btnlevel1Click"
        android:text="LEVEL I"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btnlevel2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="0"
        android:layout_column="1"
        android:enabled="false"
        android:onClick="btnlevel2Click"
        android:text="LEVEL II"
        android:textStyle="bold" />

    <!--android:enabled="false"-->

    <Button
        android:id="@+id/btnlevel3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="0"
        android:layout_column="2"
        android:enabled="false"
        android:text="LEVEL III"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnlevel4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="0"
        android:layout_column="3"
        android:enabled="false"
        android:text="LEVEL  IV"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btnlevel5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="0"
        android:layout_column="4"
        android:enabled="false"
        android:text="LEVEL  V"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnlevel6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="1"
        android:layout_column="0"
        android:enabled="false"
        android:text="LEVEL  VI"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnlevel7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="1"
        android:layout_column="1"
        android:enabled="false"
        android:text="LEVEL  VII"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnlevel8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="1"
        android:layout_column="2"
        android:enabled="false"
        android:text="LEVEL  VIII"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btnlevel9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="1"
        android:layout_column="3"
        android:enabled="false"
        android:text="LEVEL  IX"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnlevel10"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="1"
        android:layout_column="4"
        android:enabled="false"
        android:text="LEVEL  X"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttongoback"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="5"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/back"
        android:onClick="buttongobackClick"
        android:text="GO BACK" />




</GridLayout>